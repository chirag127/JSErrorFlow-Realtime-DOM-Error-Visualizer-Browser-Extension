{
  "manifest_version": 3,
  "name": "JavaScript Error Visualizer",
  "version": "1.0.0",
  "description": "Visually highlights DOM elements associated with JavaScript errors for easier debugging",
  "author": "Chirag Singhal",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/css/tooltip.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  }
}
